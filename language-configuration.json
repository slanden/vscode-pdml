{
  "comments": {
    "blockComment": [
      "[-",
      "-]"
    ]
  },
  "brackets": [
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  // Symbols that are auto-closed when typing
  "autoClosingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "[-",
      "-]"
    ],
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string"
      ]
    }
  ],
  // Symbols that can be used to surround a selection
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "`",
      "`"
    ]
  ],
  // An empty array would disable them
  "colorizedBracketPairs": [
    [
      "[",
      "]"
    ]
  ],
  "onEnterRules": [
    {
      "beforeText": "\\[-.*",
      "afterText": "^-*\\]$",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": ".*",
      "afterText": "^\\]",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*\\[.*",
      "afterText": "^[^\\]]",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^[^\\[].*\\]$",
      "afterText": "\n",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}
