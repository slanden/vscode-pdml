{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "removeComments": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}